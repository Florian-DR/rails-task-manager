<h1>Add a new tasks</h1>

<p><%= link_to "I changed my mind, lead me to the index", tasks_path %></p>
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title  %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.select :completed, ["true", "false"] %>
  <%= f.submit %>
<% end %>
